<Window x:Class="CyberBotChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberBotChat"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="CyberLock - Cybersecurity Chatbot"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <materialDesign:DrawerHost x:Name="MainDrawerHost">

        <!-- Sidebar Navigation Drawer -->
        <materialDesign:DrawerHost.LeftDrawerContent>
            <StackPanel Background="{DynamicResource PrimaryHueMidBrush}" Width="220">
                <TextBlock Text="CyberLock Guard" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="16"/>

                <Button Content="💬 Chat" 
                        Style="{StaticResource MaterialDesignFlatButton}" 
                        Foreground="White"
                        Click="ChatNav_Click"
                        Margin="8,4"/>

                <Button Content="📝 Tasks" 
                        Style="{StaticResource MaterialDesignFlatButton}" 
                        Foreground="White"
                        Click="TaskNav_Click"
                        Margin="8,4"/>

                <Button Content="🎮 Quiz" 
                        Style="{StaticResource MaterialDesignFlatButton}" 
                        Foreground="White"
                        Click="QuizNav_Click"
                        Margin="8,4"/>

                <Button Content="📋 Log" 
                        Style="{StaticResource MaterialDesignFlatButton}" 
                        Foreground="White"
                        Click="LogNav_Click"
                        Margin="8,4"/>
            </StackPanel>
        </materialDesign:DrawerHost.LeftDrawerContent>

        <!-- Main Content Area -->
        <Grid Background="{DynamicResource MaterialDesignPaper}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Toggle button -->
            <Button Content="☰"
                    Width="40"
                    Height="40"
                    Margin="32,10,928,10"
                    Click="ToggleDrawer_Click"
                    Style="{StaticResource MaterialDesignFlatButton}"/>

            <!-- Content area where UserControls load -->
            <ContentControl Name="MainContentArea" Grid.Row="1" Margin="16"/>
        </Grid>

    </materialDesign:DrawerHost>
</Window>
