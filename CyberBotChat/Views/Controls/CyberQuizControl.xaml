<UserControl x:Class="CyberBotChat.Views.Controls.CyberQuizControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:CyberBotChat.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Quiz Question Display -->
        <TextBlock Name="QuestionTextBlock"
           FontSize="20"
           FontWeight="Bold"
           TextWrapping="Wrap"
           Margin="0,0,0,20"
           Grid.Row="0"/>

        <!-- Options and Actions -->
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Grid.Row="1">
            <ListBox Name="OptionsListBox"
             SelectionMode="Single"
             Style="{StaticResource MaterialDesignListBox}"
             Background="{DynamicResource MaterialDesignPaper}"
             Margin="0,0,0,10"/>
            <!-- Adds spacing below -->

            <Button Name="SubmitButton"
                Content="Submit Answer"
                Width="200"
                Height="40"
                Click="SubmitButton_Click"
                HorizontalAlignment="Left"
                Background="{DynamicResource PrimaryHueMidBrush}"
                Foreground="White"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Margin="0,0,0,10"/>
                <!-- Adds spacing below -->

            <Button Name="NextButton"
                    Content="Next Question"
                    Width="200"
                    Height="40"
                    Click="NextButton_Click"
                    HorizontalAlignment="Left"
                    Background="{DynamicResource SecondaryHueMidBrush}"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="0,0,0,10"
                    IsEnabled="False"/>
            <!-- Disabled initially -->

            <Button Name="ResetQuizButton"
                    Content="Reset Quiz"
                    Width="200"
                    Height="40"
                    Click="ResetQuizButton_Click"
                    HorizontalAlignment="Left"
                    Background="{DynamicResource SecondaryHueMidBrush}"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,10,0,0"/>

            <TextBlock Name="FeedbackTextBlock"
               FontSize="14"
               Foreground="DarkGreen"
               TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</UserControl>
